<div class="container">
  <div class="signup-form">
    <h2>Sign Up</h2>
    <form action="/api/users/signup" method="POST">
      <div class="field">
        <label for="name" class="label">Name:</label>
        <div class="control">
          <input type="text" id="name" name="name" class="input" placeholder="Enter your name" required>
        </div>
      </div>
      <div class="field">
        <label for="password" class="label">Password:</label>
        <div class="control">
          <input type="password" id="password" name="password" class="input" placeholder="Enter your password" required>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <button type="submit" class="button is-primary">Sign Up</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>