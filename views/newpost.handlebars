<div class="create-post-container">
  <h2>Create a New Post</h2>
  <form id="createPostForm" action="/api/posts/create" method="POST">
    <div class="field">
      <label for="title" class="label">Title:</label>
      <div class="control">
        <input type="text" id="title" name="title" class="input" placeholder="Enter the title">
      </div>
    </div>
    <div class="field">
      <label for="content" class="label">Content:</label>
      <div class="control">
        <textarea id="content" name="content" class="textarea" placeholder="Enter the content"></textarea>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <button type="submit" class="button is-primary">Create Post</button>
      </div>
    </div>
  </form>
</div>